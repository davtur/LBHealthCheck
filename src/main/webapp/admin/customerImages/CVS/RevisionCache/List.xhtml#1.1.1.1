<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:p="http://primefaces.prime.com.tr/ui" >

    <ui:composition template="/template.xhtml">
        <ui:define name="title">
            <h:outputText value="#{bundle.ListCustomerImagesTitle}"></h:outputText>
        </ui:define>
        <ui:define name="body">
            <h:form id="listCustomerImagesForm1">
                <h:panelGroup >
                    <p:commandButton id="createButton" ajax="false" action="#{customerImagesController.prepareCreate}" value="#{bundle.ListCustomerImagesCreateLink}"/>

                </h:panelGroup>
                <h:outputText escape="false" value="#{bundle.ListCustomerImagesEmpty}" rendered="#{customerImagesController.items.rowCount == 0}"/>
                <h:panelGroup rendered="#{customerImagesController.items.rowCount > 0}">
                    <p:dataTable value="#{customerImagesController.items}" var="item"  widgetVar="photosTable"  paginator="true" rows="5"  paginatorTemplate="{CurrentPageReport}  {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"  rowsPerPageTemplate="5,10,15,20,25,50,100" >

                        <p:column sortBy="#{item.id}" >
                            <f:facet name="header">
                                <h:outputText value="#{bundle.ListCustomerImagesTitle_id}"/>
                            </f:facet>
                            <h:outputText value="#{item.id}"/>
                        </p:column>
                        <p:column sortBy="#{item.imageType}" >
                            <f:facet name="header">
                                <h:outputText value="#{bundle.ListCustomerImagesTitle_imageType}"/>
                            </f:facet>
                            <h:outputText value="#{item.imageType}"/>
                        </p:column>
                        <p:column sortBy="#{item.datetaken}" >
                            <f:facet name="header">
                                <h:outputText value="#{bundle.ListCustomerImagesTitle_datetaken}"/>
                            </f:facet>
                            <h:outputText value="#{item.datetaken}">
                                <f:convertDateTime pattern="MM/dd/yyyy HH:mm:ss" />
                            </h:outputText>
                        </p:column>
                        <p:column  >
                            <f:facet name="header">
                                <h:outputText value="#{bundle.ListCustomerImagesTitle_image}"/>
                            </f:facet>
                            <p:graphicImage value="#{customerImagesController.dynamicImage}" width="90px">
                                <f:param name="imageid" value="#{item.id}"/>
                            </p:graphicImage>


                        </p:column>
                        <p:column sortBy="#{item.customerId.username}" filterBy="#{item.customerId.username}"  headerText="#{bundle.ListCustomerImagesTitle_customerId}" >
                            <f:facet name="header">
                                <h:outputText value="#{bundle.ListCustomerImagesTitle_customerId}"/>
                            </f:facet>
                            <h:outputText value="#{item.customerId.username} - #{item.customerId.firstname} #{item.customerId.lastname} "/>
                        </p:column>
                        <p:column>
                            <f:facet name="header">
                                <h:outputText value="&nbsp;"/>
                            </f:facet>
                            <p:commandButton                                                            ajax="false" action="#{customerImagesController.prepareView}" value="#{bundle.ListCustomerImagesViewLink}">
                                <f:setPropertyActionListener value="#{item}" target="#{customerImagesController.selected}" />
                            </p:commandButton>

                            <h:outputText value=" "/>
                            <p:commandButton rendered="#{customerImagesController.isUserInRole('ADMIN')}" update=":listCustomerImagesForm1" actionListener="#{customerImagesController.destroyListener}" value="#{bundle.ListCustomerImagesDestroyLink}">
                                <f:setPropertyActionListener value="#{item}" target="#{customerImagesController.selectedForDeletion}" />
                            </p:commandButton>
                        </p:column>
                    </p:dataTable>
                </h:panelGroup>
            </h:form>
        </ui:define>
    </ui:composition>

</html>
