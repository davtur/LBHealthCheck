<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:p="http://primefaces.prime.com.tr/ui" >

    <ui:composition template="/template.xhtml">
        <ui:define name="title">
            <h:outputText value="#{bundle.CreateEmailTitle}"></h:outputText>
        </ui:define>
        <ui:define name="body">

            <h:form id="sendEmailForm">
                <p:panel>
                    <h:panelGrid columns="3">

                        <p:commandButton   ajax="false"   action="#{emailQueueController.create}" value="#{bundle.CreateEmailSaveLink}" />

                        <p:commandButton   ajax="false"   action="#{emailQueueController.prepareList}" value="#{bundle.CreateEmailShowAllLink}" immediate="true"/>


                    </h:panelGrid>
                </p:panel>
                <p:panel>
                    <h:panelGrid columns="1">
                        <h:outputLabel value="#{bundle.CreateEmailLabel_fromaddress}" for="EmailFromAddress" />
                        <h:inputText styleClass="emailEditorInput" onfocus="this.select()" id="EmailFromAddress" value="#{emailQueueController.selected.fromaddress}" title="#{bundle.CreateEmailTitle_EmailFromAddress}" required="true" requiredMessage="#{bundle.CreateEmailRequiredMessage_EmailFromAddress}">
                        </h:inputText>
                        <h:outputLabel value="#{bundle.CreateEmailLabel_ccaddress}" for="EmailCCAddress" />
                        <h:inputText styleClass="emailEditorInput" onfocus="this.select()" id="EmailCCAddress" value="#{emailQueueController.selected.ccaddresses}" title="#{bundle.CreateEmailTitle_EmailCCAddress}" >
                        </h:inputText>
                        <h:outputLabel value="#{bundle.CreateEmailLabel_subject}" for="emailSubject" />
                        <h:inputText styleClass="emailEditorInput" onfocus="this.select()" id="emailSubject" value="#{emailQueueController.selected.subject}" title="#{bundle.CreateEmailTitle_subject}" required="true" requiredMessage="#{bundle.CreateEmailRequiredMessage_subject}">
                        </h:inputText>
                    </h:panelGrid>
                    <h:panelGrid columns="1">
                        <h:panelGrid columns="2">
                            <p:panel >
                                <h:outputLabel value="#{bundle.CreateEmailLabel_editorbox}" for="editor1" />
                                <p:editor id="editor1" value="#{emailQueueController.selected.message}" widgetVar="editor" />  

                                <h:panelGrid columns="2" style="margin-top:10px">  
                                    <p:commandButton value="View" update="display" oncomplete="dlg.show()"  
                                                     image="ui-icon ui-icon-disk" />  
                                    <p:commandButton type="button" value="Clear" onclick="editor.clear()"  
                                                     image="ui-icon ui-icon-close" />  
                                </h:panelGrid>  

                                <p:dialog header="Content" widgetVar="dlg" showEffect="fade" hideEffect="fade" modal="true">          
                                    <h:outputText id="display" value="#{emailQueueController.selected.message}" escape="false" />  
                                </p:dialog>  
                            </p:panel>
                            <p:panel>
                                <h:panelGrid columns="1">
                                    <h:outputLabel value="#{bundle.CreateEmailLabel_senddate}" for="senddate" />
                                    <p:calendar id="senddate" value="#{emailQueueController.selected.sendDate}" mode="inline"
                                                onSelectUpdate=":menuForm:growl" title="#{bundle.CreateEmailTitle_senddate}"
                                                selectListener="#{emailQueueController.handleDateSelect}"/>

                                </h:panelGrid>
                            </p:panel>
                        </h:panelGrid>
                        <p:panel  header="#{bundle.CreateEmailLabel_picker}" >
                            <p:pickList id="picker"  value="#{emailQueueController.participants}"
                                        var="cust"

                                        itemLabel="#{cust.firstname} #{cust.lastname}"
                                        itemValue="#{cust}" converter="#{custConverter}">
                                <f:facet name="sourceCaption">Customers</f:facet>
                                <f:facet name="targetCaption">Email Recipients List</f:facet>
                            </p:pickList>

                            <p:dialog  modal="true" showEffect="fade" hideEffect="fade" widgetVar="cityDialog">
                                <h:panelGrid  id="displayCities" columns="2">
                                    <h:outputText value="Source: " style="font-weight:bold"/>
                                    <ui:repeat value="#{emailQueueController.participants.source}" var="item">
                                        <h:outputText value="#{item}" style="margin-right:5px" />
                                    </ui:repeat>

                                    <h:outputText value="Target: " style="font-weight:bold"/>
                                    <ui:repeat  value="#{emailQueueController.participants.target}" var="item">
                                        <h:outputText value="#{item}" style="margin-right:5px" />
                                    </ui:repeat>
                                </h:panelGrid>
                            </p:dialog>
                        </p:panel>

                    </h:panelGrid>
                </p:panel>
            </h:form>
        </ui:define>
    </ui:composition>

</html>
