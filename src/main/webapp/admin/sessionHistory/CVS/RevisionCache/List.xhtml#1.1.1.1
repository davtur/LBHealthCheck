<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:p="http://primefaces.prime.com.tr/ui" >

    <ui:composition template="/template.xhtml">
        <ui:define name="title">
            <h:outputText value="#{bundle.ListSessionHistoryTitle}"></h:outputText>
        </ui:define>
        <ui:define name="body">
        <h:form id="listSessionHistoryForm1">
            <h:panelGroup >
                <p:commandButton id="createButton" ajax="false" action="#{sessionHistoryController.prepareCreate}" value="#{bundle.ListSessionHistoryCreateLink}"/>
            </h:panelGroup>
            <h:outputText escape="false" value="#{bundle.ListSessionHistoryEmpty}" rendered="#{sessionHistoryController.items.rowCount == 0}"/>
            <h:panelGroup rendered="#{sessionHistoryController.items.rowCount > 0}">
                <p:dataTable value="#{sessionHistoryController.items}" var="item" widgetVar="sessionsTable"  paginator="true" rows="15"  paginatorTemplate="{CurrentPageReport}  {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"  rowsPerPageTemplate="5,10,15,20,25,50,100" >
                    <p:column sortBy="#{item.id}" >
                        <f:facet name="header">
                            <h:outputText value="#{bundle.ListSessionHistoryTitle_id}"/>
                        </f:facet>
                        <h:outputText value="#{item.id}"/>
                    </p:column>
                    <p:column sortBy="#{item.sessiondate}" >
                        <f:facet name="header">
                            <h:outputText value="#{bundle.ListSessionHistoryTitle_sessiondate}"/>
                        </f:facet>
                        <h:outputText value="#{item.sessiondate}">
                            <f:convertDateTime pattern="dd/MM/yyyy" />
                        </h:outputText>
                    </p:column>
                     <p:column sortBy="#{item.sessionTypes.name}"  filterBy="#{item.sessionTypes.name}"  headerText="#{bundle.ListSessionHistoryTitle_sessionType}" >
                        <f:facet name="header">
                            <h:outputText value="#{bundle.ListSessionHistoryTitle_sessionType}" />
                        </f:facet>
                        <h:outputText value="#{item.sessionTypes.name}"/>
                    </p:column>
                     <p:column sortBy="#{item.customers.firstname}"  filterBy="#{item.customers.firstname}"  headerText="#{bundle.ListSessionHistoryTitle_trainer}" >
                        <f:facet name="header">
                            <h:outputText value="#{bundle.ListSessionHistoryTitle_trainer}"/>
                        </f:facet>
                        <h:outputText value="#{item.customers.firstname} #{item.customers.lastname}"/>
                    </p:column>

                    <p:column sortBy="#{item.comments}" filterBy="#{item.comments}"  headerText="#{bundle.ListSessionHistoryTitle_comments}" >
                        <f:facet name="header">
                            <h:outputText value="#{bundle.ListSessionHistoryTitle_comments}"/>
                        </f:facet>
                        <h:outputText value="#{item.comments}"/>
                    </p:column>

                    <p:column>
                        <f:facet name="header">
                            <h:outputText value="&nbsp;"/>
                        </f:facet>
                        <p:commandButton                                                            ajax="false" action="#{sessionHistoryController.prepareView}" value="#{bundle.ListSessionHistoryViewLink}">
                         <f:setPropertyActionListener value="#{item}" target="#{sessionHistoryController.selected}" />
                        </p:commandButton>
                        <h:outputText value=" "/>
                        <p:commandButton rendered="#{sessionHistoryController.isUserInRole('ADMIN')}"  ajax="false" action="#{sessionHistoryController.prepareEdit}" value="#{bundle.ListSessionHistoryEditLink}">
                         <f:setPropertyActionListener value="#{item}" target="#{sessionHistoryController.selected}" />
                        </p:commandButton>
                        <h:outputText value=" "/>
                        <p:commandButton rendered="#{sessionHistoryController.isUserInRole('ADMIN')}" update=":listSessionHistoryForm1"   value="#{bundle.ListSessionHistoryDestroyLink}">
                            <f:setPropertyActionListener value="#{item}" target="#{sessionHistoryController.selectedForDeletion}" />
                        </p:commandButton>
                    </p:column>
                </p:dataTable>
            </h:panelGroup>
        </h:form>
        </ui:define>
    </ui:composition>

</html>
